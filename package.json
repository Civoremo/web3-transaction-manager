{
	"name": "web3-transaction-manager",
	"version": "0.0.15",
	"description": "A Svelte package for managing sequential Web3 transactions with a user-friendly interface",
	"author": "Civoremon",
	"license": "MIT",
	"type": "module",
	"keywords": [
		"svelte",
		"web3",
		"ethereum",
		"transactions",
		"blockchain"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:page": "vite dev --open /test",
		"lint": "eslint .",
		"format": "prettier --write .",
		"publish": "npm run package && npm publish"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0",
		"@sveltejs/adapter-static": "^1.0.0",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "2.4.5",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/svelte": "^5.2.7",
		"eslint": "^9.25.1",
		"eslint-plugin-svelte": "^3.5.1",
		"jsdom": "^24.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^4.0.0",
		"vitest": "^3.1.2"
	},
	"dependencies": {
		"@sveltejs/package": "^2.3.11"
	},
	"peerDependencies": {
		"@sveltejs/kit": ">=1.0.0 <3.0.0",
		"svelte": "^4.2.7",
		"ethers": "^5.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Civoremo/web3-transaction-manager"
	},
	"bugs": {
		"url": "https://github.com/Civoremo/web3-transaction-manager/issues"
	},
	"homepage": "https://web3-transaction-manager.netlify.app/",
	"publishConfig": {
		"access": "public"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js"
}
